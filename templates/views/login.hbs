    <script >
       function openPopup() {
  let openPopup = document.getElementById('popup');
  openPopup.classList.add('open-popup');

  // Add a class to the slider container to hide it
  let sliderContainer = document.querySelector('.slider-container');
  sliderContainer.classList.add('hide-slider');
}

function onclose() {
  let close = document.getElementById('cross');
  close.classList.remove('open-popup');
  window.location.href = "/login"; // Redirect to the home page

  // Remove the class to show the slider again
  let sliderContainer = document.querySelector('.slider-container');
  sliderContainer.classList.remove('hide-slider');
}

    </script>
